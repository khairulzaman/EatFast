@model EatFast.Models.Entities.Restaurant

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<fieldset>
    <legend>Restaurant</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">IsActive</div>
    <div class="display-field">@Model.IsActive</div>

    <div class="display-label">DtCreated</div>
    <div class="display-field">@String.Format("{0:g}", Model.DtCreated)</div>

    <div class="display-label">DtModified</div>
    <div class="display-field">@String.Format("{0:g}", Model.DtModified)</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.RestaurantID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

